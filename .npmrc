# ========================
# .npmrc multi-environment
# ========================

# Use proxy and certificate only if the variables exist in the environment
# (Uncomment these lines if using Codex or behind a proxy)
# proxy=${http_proxy:-}
# https-proxy=${https_proxy:-}
# cafile=${CODEX_PROXY_CERT:-}

# Enforce secure SSL (can be temporarily disabled if a proxy breaks SSL)
strict-ssl=true

# Recommended options to improve performance
fund=false
audit=false
progress=false